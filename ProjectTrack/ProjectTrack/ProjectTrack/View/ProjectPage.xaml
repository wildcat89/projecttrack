<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectTrack.ProjectPage"
             Title="Projekty">
    <ListView
    ItemsSource="{Binding Projects}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}" Detail="{Binding Count}" Command="{Binding ShowTasks}" CommandParameter="{Binding Id}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>